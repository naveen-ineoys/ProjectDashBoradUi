@model List<HouseKeeping>

<style>
    *{
        font-family: Inter;
        font-weight: bold;
    }
    .House-main-div {
        background-color: #f2f3f4;
        border: 1px solid #e5e7e9;
    margin-left:10px;
    }
    .text {

    font-family: Inter; /* Body */
    font-size: 16px;
    line-height: 22px;
    font-weight: bold;
    color: #5B5863FF;
    }

    .top-container{


    background: #FFFFFFFF;
    border-radius: 5px;
    border-width: 1px;
        border-color: #e5e7e9;
    border-style: solid;
    box-shadow: 0px 0px 1px #171a1f12, 0px 0px 2px #171a1f1F; /* shadow-xs */
    }

    .search{
    width:50%;
    }

    .input-div{
        width:82%;
    }

    .custom-search-input {
        width:80%;
        font-size:14px;
        font-family: Inter;
        border: none;
        border-bottom: 2px solid #ccc;
        border-radius: 0;
        box-shadow: none;
       
    }
    .textbox1  {
   
    
    font-family: Inter;
    font-size: 11px;
    line-height: 25px;
    font-weight: bold;
    background: #00000000; /* transparent */
    border-radius: 2px; /* border-xs */
    border-width: 1px;
    border-color: #BDC1CAFF; /* neutral-400 */
    border-style: solid;
    outline: none;
    }

    .textbox2  {
       
        font-family: Inter;
        font-size: 11px;
        line-height: 25px;
        font-weight: bold;
        background: #00000000; /* transparent */
        border-radius: 10px; /* border-xs */
        border-width: 1px;
        border-color: #BDC1CAFF; /* neutral-400 */
        border-style: solid;
        outline: none;
    }

    .textbox input:hover {
    color: #171A1FFF; /* neutral-900 */
    border-color: red; /* neutral-450 */
    }

    .textbox input:disabled {
    color: #171A1FFF; /* neutral-900 */
    border-color: #BDC1CAFF; /* neutral-400 */
    }

    .select-all{
        font-family: Inter; /* Body */
        font-size: 14px;
        line-height: 28px;
        font-weight: bold;
        color: #6C657EFF;
    }

    
    .assign-btn{
        width: 67px;
        height: 31px;
        padding: 0 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: Inter;
        font-size: 12px;
        line-height: 12px;
        font-weight: 400;
        color: #C59B7CFF;
        background: #F8C79BFF;
        opacity: 1;
        border: none;
        border-radius: 2px;
       
    }

    .image{
    
    }
    .bottom-container{
        background: #FFFFFFFF;
        border-radius: 5px;
        border-width: 1px;
        border-color: #e5e7e9;
        border-style: solid;
        box-shadow: 0px 0px 1px #171a1f12, 0px 0px 2px #171a1f1F; /* shadow-xs */
    }
    .room-container{
    width: 147px;
    height: 100px;
    background: #F9F9F9FF;
    border-radius: 2px; /* border-xs */
    border-width: 1px;
    border-color: #F9F9F9FF;
    border-style: solid;
    box-shadow: 0px 0px 1px #171a1f12, 0px 0px 2px #171a1f1F;
    margin-left:20px;
    }

    .roomno{
    font-family: Inter; 
    font-size: 14px;
    line-height: 22px;
    font-weight: 400;
    color: #545268FF;
    }

    .room-dirty{
        font-family: Inter;
        font-size: 8px;
        line-height: 12px;
        font-weight: 400;
        color: #6C6571FF;
        background: #EEEEEEFF;
        opacity: 1;
        border: none;
        border-radius: 10px;
    }

    .room-occupy{
        font-family: Inter;
        font-size: 8px;
        line-height: 12px;
        font-weight: 400;
        color: #FFFFFFFF;
        background: #227BBDFF;
        opacity: 1;
        border: none;
        border-radius: 9px;
    }

    .room-ready-to-occupy{
        font-family: Inter;
        font-size: 7px;
        line-height: 12px;
        font-weight: 400;
        color: #659CD1FF;
        background: #FFFFFFFF;
        opacity: 1;
        border-radius: 4px; /* border-s */
        border-width: 1px;
        border-color: #428CC9FF;
        border-style: solid;
    }
</style>

<div class="container-fluid House-main-div p-3">
    <p class="text mt-5 ">Assign Room Cleaning</p>
    <div class="container-fluid  top-container mt-5 p-3">
        <div class="row">

            <div class="col-8 d-flex justify-content-between">

                <input class="col-5 textbox1" type="search" name="name" value="" placeholder="Search" id="search-by-stauts" />
                <input class="col-5 textbox2" type="search" name="name" value="" placeholder="Search" />
            </div>
       </div>
        <div class="row mt-2">
            <div class="col  mt-2 d-flex">

                <div class="mt-2"> <input class="" type="checkbox" name="name" value="" placeholder="Search" id="selectAll" /> 
                    <label for="selectAll" class="select-all">SelectAll</label>
                </div>
                <div class="col d-flex">
                    <div class="mt-2">
                        <p  class="txt-assign">
                            <span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="18" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
                                </svg>
                            </span>

                        </p>
                    </div>
                    <div class="d-flex">

                        <div class="input-div d-flex">
                              <input type="text" class="form-control custom-search-input" placeholder="Assign to?">
                            <div class="image">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-caret-down dropdown-toggle" viewBox="0 0 16 16" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    <path d="M3.204 5h9.592L8 10.481zm-.753.659 4.796 5.48a1 1 0 0 0 1.506 0l4.796-5.48c.566-.647.106-1.659-.753-1.659H3.204a1 1 0 0 0-.753 1.659" />
                                </svg>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    @foreach (var item in Model)
                                    {
                                        <li><a class="dropdown-item" href="#">@item.EmployeeName (@item.EmploueeId)</a></li>
                                    }
                                  
                                </ul>
                            </div>
                            </div>
                       
                       <div><button class="btn assign-btn">Assign</button></div>
                      
                    </div>
                </div>

            </div>


        </div>

    </div>
    <div class="container-fluid mt-5 bottom-container p-3">
        <div class="row">
            @foreach (var item in Model)
            {
                if (item.RoomStatus == "Dirty")
                {
                    <div class="col-2 mb-3 room-container">
                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <div>  <h4 class="roomno">@item.RoomNo</h4></div>
                            <div > <button class="btn  room-dirty">@item.RoomStatus</button></div>
                            <br>
                           
                        </div>
                        <div class="d-flex justify-content-end "><input type="checkbox" class="selectItem"></div>
                    </div>
                }
                else if (item.RoomStatus == "occupy")
                {
                    <div class="col-2 mb-3 room-container">
                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <div>  <h4 class="roomno">@item.RoomNo</h4></div>
                            <div > <button class="btn  room-occupy">@item.RoomStatus</button></div>
                            <br>
                            
                        </div>
                        <div class="d-flex justify-content-end "><input type="checkbox" class="selectItem"></div>
                    </div>
                }
                else
                {
                    <div class="col-2 mb-3 room-container">
                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <div>  <h4 class="roomno">@item.RoomNo</h4></div>
                            <div> <button class="btn  room-ready-to-occupy">@item.RoomStatus</button></div>
                            <br>
                            
                        </div>
                        <div class="d-flex justify-content-end "><input type="checkbox" class="selectItem"></div>
                    </div>
                }



            }


        </div>
    </div>
</div>
<script src="~/js/housekeepingjavascript.js"></script>


