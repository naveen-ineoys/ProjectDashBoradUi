@model MainModel

<link href="~/css/mainviewstylesheet.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="main-content col py-3">
            @* container for create a year list  *@
            <div class="container-fluid">
                <div class="container-fluid ">
                    <div class="d-flex justify-content-end">
                        <a class="btn btn-primary  justify-content-end">Booking</a>
                    </div>
                </div>
                <div class="row mt-2">
                    @*  foreach used for display the list of years *@
                    @foreach (var item in Model.years)
                    {
                        <div class="col d-grid justify-content-center form-check btn list-year">
                            <input class="form-check-input" type="radio" name="year" id="year+@item.Years" value="@item.Years" @if (item.currentYear == item.Years)
                            {
                                @*  if conditon used for checked the current year whenever the document is loaded *@
                                <text>checked</text>
                            }  onclick="FindMonth()"/>
                            <label class="form-check-label  labelSize-year" for="year+@item.Years">
                                @item.Years
                            </label>

                        </div>
                    }

                </div>
            </div>
            @* container for create a month list  *@
            <div class="container-fluid mt-2">
                <div class="row mt-2">
                    @*  foreach used for display the list of months *@
                    @foreach (var month in Model.months)
                    {
                        <div class="col form-check btn btn-month ">
                            <input class="form-check-input-month" type="radio" name="month" id="month+@month.months" value="@month.id" @if (month.currentMonth == month.id)
                            {
                                @*  if conditon used for checked the current monrh whenever the document is loaded *@
                                <text>checked</text>
                            }  onclick="FindMonth()"/>
                            <label class="form-check-label  labelSize-month" for="month+@month.months">
                                @month.months
                            </label>

                            <br />
                        </div>
                    }
                </div>
            </div>

            @* div for fillter the records *@
            <div class="container-fluid mt-4 ">

                <div class="row ">
                    <div class="container-fluid  d-flex search-bar ">
                        <div class="container mt-3  justify-content-lg-start"><p class="text text-start text-capitalize text-dark textStyle">Fillter the Recors</p></div>
                        <div class="container d-flex justify-content-end mt-2">
                            <span id="hide">
                                @*   svg tah used display search icon take from the browser *@
                                <svg color="#dededf" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M7.75745 10.5858L9.17166 9.17154L12.0001 12L14.8285 9.17157L16.2427 10.5858L12.0001 14.8284L7.75745 10.5858Z" fill="currentColor" />
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M1 12C1 5.92487 5.92487 1 12 1C18.0751 1 23 5.92487 23 12C23 18.0751 18.0751 23 12 23C5.92487 23 1 18.0751 1 12ZM12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12C21 16.9706 16.9706 21 12 21Z" fill="currentColor" />
                                </svg>
                            </span>
                        </div>
                    </div>
                    @*  whenever we click that search icon then only show the this div so we use display:none property *@
                    <div class="container-fluid mt-3 one" id="one" style="display:none">

                        <div class="row">
                            <div class=" col-4 mt-4">
                                <label for="first-drop">Floor</label>
                                <select class="form-select  first-dropdown" id="first-drop" aria-label="Default select example">

                                    <option value="1">1st</option>
                                    <option value="2">2nd</option>
                                    <option value="3">3rd</option>
                                </select>
                            </div>
                            <div class=" col-4 mt-4">
                                <label for="second-drop">Room Category</label>
                                <select class="form-select first-dropdown" id="second-drop" aria-label="Default select example">

                                    <option value="1">King</option>
                                    <option value="2">Queen</option>
                                    <option value="3">Dulex</option>
                                </select>
                            </div>
                            <div class=" col-4 mt-4">
                                <label for="second-drop">Room Category</label>
                                <select class="form-select first-dropdown" id="second-drop" aria-label="Default select example">

                                    <option value="1">King</option>
                                    <option value="2">Queen</option>
                                    <option value="3">Dulex</option>
                                </select>
                            </div>
                        </div>
                        @*   Floor Fillter *@
                        <div class="row">
                            <div class=" col-4 mt-4">
                                <label for="first-drop">Floor</label>
                                <select class="form-select  first-dropdown" id="first-drop" aria-label="Default select example">

                                    <option value="1">1st</option>
                                    <option value="2">2nd</option>
                                    <option value="3">3rd</option>
                                </select>
                            </div>
                            <div class=" col-4 mt-4">
                                <label for="second-drop">Room Category</label>
                                <select class="form-select first-dropdown" id="second-drop" aria-label="Default select example">

                                    <option value="1">King</option>
                                    <option value="2">Queen</option>
                                    <option value="3">Dulex</option>
                                </select>
                            </div>


                        </div>


                    </div>


                </div>

            </div>

            @* Partial view call the guest stay details in day view *@
            <div id="partial"></div>
        </div>

    </div>
</div>
